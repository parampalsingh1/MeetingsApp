<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#0B0B0B">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/black"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme">

                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="start"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/back"
                    android:src="@drawable/icons8_back_button_30"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Create Meeting"
                    android:textColor="@android:color/white"
                    android:fontFamily="monospace"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </androidx.appcompat.widget.Toolbar>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/spartan"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"
                android:backgroundTint="@color/white"
                android:text="Fill the details below :"
                android:textColor="#020202"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title"
                android:layout_width="101dp"
                android:layout_height="28dp"
                android:layout_margin="12dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/textview_border"
                android:fontFamily="@font/spartan"
                android:paddingTop="5dp"
                android:text="Title"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                tools:ignore="TextSizeCheck" />

            <EditText
                android:id="@+id/enterTitle"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="28dp"
                android:backgroundTint="#948E8E"
                android:ems="10"
                android:hint="Enter Title"
                android:inputType="text"
                android:textSize="12sp"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date"
                android:layout_width="101dp"
                android:layout_height="28dp"
                android:layout_margin="12dp"
                android:layout_marginTop="47dp"
                android:layout_marginBottom="64dp"
                android:background="@drawable/textview_border"
                android:fontFamily="@font/spartan"
                android:paddingTop="5dp"
                android:text="Date"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/enterDate"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="38dp"
                android:clickable="true"
                android:ems="10"
                android:focusable="false"
                android:hint="Click to Select Date"
                android:inputType="text"
                android:textSize="12sp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/time"
                android:layout_width="101dp"
                android:layout_height="28dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/textview_border"
                android:fontFamily="@font/spartan"
                android:paddingTop="5dp"
                android:text="Time"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/enterTime"
                android:layout_width="122dp"
                android:layout_height="37dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="28dp"
                android:clickable="true"
                android:ems="10"
                android:focusable="false"
                android:hint="Click to Select Time"
                android:inputType="text"
                android:textSize="12sp"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Contact"
                android:layout_width="101dp"
                android:layout_height="28dp"
                android:layout_margin="12dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/textview_border"
                android:fontFamily="@font/spartan"
                android:paddingTop="5dp"
                android:text="Contact"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/enterContactPhone"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="28dp"
                android:backgroundTint="#948E8E"
                android:clickable="true"
                android:ems="10"
                android:focusable="false"
                android:hint="Click to Select Contact"
                android:inputType="text"
                android:textSize="12sp"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/saveButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="275dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#EF5C15"
                android:fontFamily="@font/spartan_bold"
                android:text="SAVE" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>